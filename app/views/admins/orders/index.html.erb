<h2>注文履歴一覧</h2><br><br>
<table class="table table-striped">
    <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order|%>
    <tr>
        <td>
            <%=link_to order.created_at.to_s(:datetime_jp), admins_order_path(order) %>
        </td>
        <td>
            <%= order.member.last_name %>
            <%= order.member.first_name %>
        </td>
        <td>
            <% total_quantity = 0 %>
            <% order.order_products.each do |order_product|  %>
            <% order_product.quantity %>
            <% total_quantity += order_product.quantity %>
            <% end %>
            <%= total_quantity %>
        </td>
        <td>
            <%= order.order_status %>
        </td>
    </tr>
    <% end %>
    <%= paginate @orders %>
</table>
