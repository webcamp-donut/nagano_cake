<h1>ジャンル一覧・追加</h1>



<%= form_with model: [:admins, @genre], local: true do |f| %>
	<%= f.label :name, "ジャンル" %>
    <%= f.text_field :name %>

    <%= f.radio_button :status, :表示, :checked => true %>
    <%= f.label :status, "表示" %>
    <%= f.radio_button :status, :非表示, :checked => false %>
    <%= f.label :status, "非表示" %>

	<%= f.submit "追加" %>
<% end %>

<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @genres.each do |genre| %>
		<tr>
			<td><%= genre.name %></td>
			<td><%=  genre.status %></td>
			<td><%= link_to "編集する", edit_admins_genre_path(genre) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
