
<h1>商品編集</h1>
	<%= form_for @product, url: admins_product_path(@product) do |f| %>
	  <%= f.attachment_field :image %>
	  <h4>商品名</h4>
      <%= f.text_field :name %>
    <h4>商品説明</h4>
      <%= f.text_area :explanation %>
    <h4>ジャンル</h4>
      <%= f.collection_select :genre_id, Genre.all, :id, :name %>
    <h4>税抜価格</h4>
      <%= f.text_field :tax_excluded_price %>円
    <h4>販売ステータス</h4>
      <%= f.select :sale_status,{ 販売中:"販売中", 売切れ:"売切れ"} %>     
    <%= f.submit '変更を保存',class: 'btn btn-primary' %> 
      
  <% end %>