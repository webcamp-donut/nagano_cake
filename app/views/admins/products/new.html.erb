<h2>商品新規登録</h2>

    <%= form_for @product, url:  admins_products_path(@product), local: true do |f| %>

         <div class="col-lg-4">
            <%= attachment_image_tag(@product, :image, :fill,300,300, fallback: "no_image.jpg", size:'300x300',  format: "jpg") %>
            <%= f.attachment_field :image %>
         </div>
      <table class="col-lg-8">
         <tr>
            <td class="margin_top_bottom">商品名</td>
            <td><%= f.text_field :name %></td>
         </tr>
         <tr>
            <td class="margin_top_bottom">商品説明</td>
            <td><%= f.text_area :explanation, size:'20x8' %></td>
         </tr>

         <tr>
            <td class="margin_top_bottom">ジャンル</td>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: true %></td>
         </tr>

         <tr>
            <td class="margin_top_bottom">税抜価格</td>
            <td><%= f.text_field :tax_excluded_price %>円</td>
         </tr>

         <tr">
            <td class="margin_top_bottom">販売ステータス</td>
            <td><%= f.select :sale_status,{ 販売中:"販売中", 売切れ:"売切れ"} %></td>
         </tr>

         <tr>
            <td class="new_production_botton"><%= f.submit '新規登録',class: 'btn btn-primary' %></td>
         </tr>

      </table>

    <% end %> 