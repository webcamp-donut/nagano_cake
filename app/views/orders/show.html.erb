<h1>注文履歴詳細</h1>

<% total = 0 %>

<h2>注文情報</h2>
<table>
		<tr>
			<td>注文日</td>
			<td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
		</tr>
		<tr>
			<td>配送先</td>
			<td><%= @order.postal_code %><br>
					<%= @order.address %><br>
					<%= @order.name %><br>
				</td>
		</tr>
		<tr>
			<td>支払い方法</td>
			<td><%= @order.payment %></td>
		</tr>
		<tr>
			<td>ステータス</td>
			<td><%= @order.order_status %></td>
		</tr>
</table>

<h2>注文内容</h2>
<table>
	<thead>
		<tr>
			<th>商品</th>
			<th>単価（税込）</th>
			<th>個数</th>
			<th>小計</th>
		</tr>
	</thead>
	<tbody>
		<% @order.order_products.each do |order_product|  %>
			<tr>
				<td><%= order_product.product.name %></td>
				<td><%= include_tax(order_product.product.tax_excluded_price).to_i %></td>
				<td><%= order_product.quantity %></td>
				<td><%= subtotal = include_tax(order_product.product.tax_excluded_price).to_i * order_product.quantity %></td>
				<% total += subtotal %>
			</tr>
		<% end %>
	</tbody>
</table>

<h2>請求情報</h2>
<table>
		<tr>
			<td>商品合計</td>
			<td><%= total %></td>
		</tr>
		<tr>
			<td>配送料</td>
			<td><%= @order.delivery_fee %></td>
		</tr>
		<tr>
			<td>ご請求額</td>
			<td><%= @order.total_fee %></td>
		</tr>

</table>

<%= link_to "戻る", orders_path %>
