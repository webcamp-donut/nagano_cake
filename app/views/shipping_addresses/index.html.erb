<div class="row">
    <div class="col-md-11 colmd-offset-1">
        <h3>配送先登録一覧</h3>
    </div>
</div>
<div class="row">
    <div class="form-horizontal" role="form">
        <%= form_for @shipping_address do |f| %>
        <div class="form-group">
            <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "control-label col-md-2" %>
            <div class="col-md-4">
                <%= f.text_field :postal_code, class: "form-control" %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :address, "住所", class: "control-label col-md-2" %>
            <div class="col-md-6">
                <%= f.text_field :address, class: "form-control" %>
            </div>
        </div>
        <div class="form-group text-left">
            <%= f.label :name, "宛名", class: "control-label col-md-2" %>
            <div class="col-md-4">
                <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="col-md-offset-2 col-md-3">
                <%= f.submit "登録する", class: "btn btn-primary" %>
            </div>
        </div>
    </div>
    <% end %>
</div>
<div class="row" , style="margin-top: 20px;">
    <div class="col-md-9">
        <table class="table table-bordered">
            <thead>
                <tr class="active">
                    <th class="col-md-2">郵便番号</th>
                    <th class="col-md-4">住所</th>
                    <th class="col-md-2">宛名</th>
                    <th class="col-md-3"></th>
                </tr>
            </thead>
            <tbody>
                <% current_member.shipping_addresses.each do |shipping_address|  %>
                <tr>
                    <td>
                        <%= shipping_address.postal_code %>
                    </td>
                    <td>
                        <%= shipping_address.address %>
                    </td>
                    <td>
                        <%= shipping_address.name %>
                    </td>
                    <td>
                        <%= link_to edit_shipping_address_path(shipping_address) do %>
                        <button class="btn btn-primary" , style="margin-right: 5px;">編集する</button>
                        <% end %>
                        <%= link_to shipping_address_path(shipping_address), method: :delete do %>
                        <button class="btn btn-danger">削除する</button>
                        <% end %>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>