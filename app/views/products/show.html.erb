
<p><%= attachment_image_tag(@product, :image, :fill,200,200, fallback: "no_image.jpg", size:'200x200') %></p>
<p>商品名<%= @product.name %></p>
<p>商品説明<%= @product.explanation %></p>
<p>¥<%= include_tax(@product.tax_excluded_price).to_i %>(税込)</p>

<%= form_for(@cart_item, url: cart_items_path, html: {method: "post"}) do |f| %>
	<%= f.select :quantity, options_for_select((1..10).to_a) %>
	<%= f.hidden_field :member_id, :value => current_member.id %>
	<%= f.hidden_field :product_id, :value => @product.id %>
	<%= f.submit "カートに入れる" %>

<% end %>